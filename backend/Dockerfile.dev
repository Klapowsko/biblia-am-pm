FROM golang:alpine

WORKDIR /app

# Install air for hot reload and build dependencies
RUN apk add --no-cache git && \
    go install github.com/air-verse/air@latest

# Copy go mod files and download dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run air for hot reload
CMD ["air", "-c", ".air.toml"]

